<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">
    <display-name>Comet4J-Demo</display-name>

    <context-param>
        <param-name>debug</param-name>
        <param-value>false</param-value>
    </context-param>

    <context-param>
        <param-name>encoding</param-name>
        <param-value>UTF-8</param-value>
    </context-param>
    <context-param>
        <param-name>contentType</param-name>
        <param-value>text/html;charset=UTF-8</param-value>
    </context-param>

    <context-param>
        <param-name>controller_package</param-name>
        <param-value>com.hzc.weixin.ctrl</param-value>
    </context-param>
    <context-param>
        <param-name>mybatis_config_path</param-name>
        <param-value>mybatis-config.xml</param-value>
    </context-param>

    <!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->
    <!-- |||||||||||||||||||||||||||||||||||||||||||||| 上面是简易 SSH 框架的配置 ||||||||||||||||||||||||||||||||||||||||||||| -->
    <!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->
    <!-- 服务器启动的时候监听，添加数据到缓存 -->
    <!-- <listener>
        <listener-class>com.tangiatech.lms.ServletInit</listener-class>
    </listener> -->
    <!-- 暂时注掉-->

    <!-- 初始化 运行时 mybatis 的数据源 动态切换 的监听 -->
    <listener>
        <listener-class>com.hzc.framework.ssh.listener.InitSshListener</listener-class>
    </listener>
    <!-- 控制层 路由器 -->
    <servlet>
        <servlet-name>RouteServlet</servlet-name>
        <servlet-class>com.hzc.framework.ssh.controller.RouteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RouteServlet</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->
    <!-- |||||||||||||||||||||||||||||||||||||||||||||| 上面是简易 SSH 框架的配置 ||||||||||||||||||||||||||||||||||||||||||||| -->
    <!-- |||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||| -->
    <!-- 服务器启动的时候监听，添加数据到缓存 -->
    <!-- <listener>
        <listener-class>com.tangiatech.lms.ServletInit</listener-class>
    </listener> -->
    <!-- 暂时注掉-->

    <!--编码处理 -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.hzc.framework.ssh.filter.SetCharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <mime-mapping>
        <extension>air</extension>
        <mime-type>application/air</mime-type>
    </mime-mapping>

    <filter>
        <filter-name>CORS</filter-name>
        <filter-class>com.thetransactioncompany.cors.CORSFilter</filter-class>

        <init-param>
            <param-name>cors.allowOrigin</param-name>
            <param-value>*</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CORS</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CommonFiler</filter-name>
        <filter-class>com.hzc.weixin.CommonFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CommonFiler</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


</web-app>